# Backend environment example
# Copy to .env and adjust values

# JWT
SECRET_KEY=CHANGE_ME_IN_PROD

# Database (override alembic.ini when running app in Docker)
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/secure_ai_sandbox

# SMTP notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SENDER=noreply@example.com
SMTP_ADMIN_RECIPIENTS=admin@example.com
SMTP_USE_TLS=true

# Escalation delays (seconds)
ESCALATION_HIGH_DELAY_SECONDS=300
ESCALATION_CRITICAL_DELAY_SECONDS=120

# CORS and security headers
CORS_ALLOW_ORIGINS=http://localhost:5173
ENABLE_SECURITY_HEADERS=true
